{
  "name": "react-metaforms",
  "version": "3.0.3",
  "main": "lib/export",
  "typings": "lib/export",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/flsy/react-metaforms.git"
  },
  "keywords": [
    "react",
    "forms"
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/flsy/react-metaforms/issues"
  },
  "homepage": "https://flsy.github.io/react-metaforms",
  "files": [
    "lib"
  ],
  "scripts": {
    "start": "start-storybook -p 9009",
    "test": " jest",
    "format": "prettier --write \"src/**/*.{ts,tsx}\" \"src/**/*.{js,jsx}\"",
    "prettier": "prettier --check \"src/**/*.{ts,tsx}\"",
    "lint": "eslint 'src/**/*.{ts,tsx}'",
    "build": "rm -rf ./lib && tsc --p tsconfig.json",
    "verify": "yarn format && yarn lint && yarn test && yarn build",
    "prepublishOnly": "yarn build",
    "predeploy": "build-storybook",
    "deploy": "NODE_DEBUG=gh-pages gh-pages -d storybook-static"
  },
  "peerDependencies": {
    "react": "*",
    "react-dom": "*"
  },
  "dependencies": {
    "metaforms": "^1.0.3",
    "react": "^16.*"
  },
  "devDependencies": {
    "@babel/core": "^7.12.0",
    "@storybook/addon-actions": "^6.0.28",
    "@storybook/addon-links": "^6.0.28",
    "@storybook/addons": "^6.0.27",
    "@storybook/preset-create-react-app": "^3.1.4",
    "@storybook/react": "^6.0.28",
    "@types/enzyme": "^3.10.8",
    "@types/enzyme-adapter-react-16": "^1.0.6",
    "@types/jest": "^26.0.14",
    "@types/node": "^14.14.7",
    "@types/react": "^16.9.55",
    "@types/react-dom": "^16.9.9",
    "@typescript-eslint/eslint-plugin": "^4.7.0",
    "@typescript-eslint/parser": "^4.7.0",
    "babel-loader": "^8.1.0",
    "babel-preset-react-app": "^10.0.0",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.5",
    "eslint": "^7.13.0",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-react": "^7.21.5",
    "gh-pages": "^3.1.0",
    "jest": "^26.6.3",
    "prettier": "^2.1.2",
    "react-dom": "^16.13.1",
    "ts-jest": "^26.4.3",
    "typescript": "^4.0.3"
  },
  "jest": {
    "rootDir": "src",
    "preset": "ts-jest",
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": [
      "<rootDir>/setupTests.js"
    ]
  }
}
